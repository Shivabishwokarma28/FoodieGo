<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @* Dynamically pulls the title from the specific View being looked at *@
    <title>@ViewData["Title"] - FoodieGo</title>

    <link href="~/css/auth.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /* 1. Global Layout: Ensures the content doesn't hide behind the fixed navbar */
        body {
            padding-top: 70px;
            flex-direction: column;
            justify-content: space-between;
        }

        /* 2. Brand Colors: Customizing the Bootstrap navbar to match the FoodieGo red/dark theme */
        .navbar {
            background-color: rgba(33, 37, 41, 0.95) !important;
            border-bottom: 2px solid #ff4757;
            backdrop-filter: blur(5px);
        }

        .navbar-brand {
            font-weight: 700;
            color: #ff4757 !important;
        }

        .nav-link {
            color: white !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #ff4757 !important;
            }

        /* 3. Sticky Footer styling */
        footer {
            background-color: #212529 !important;
            border-top: 1px solid #343a40;
            width: 100%;
            z-index: 10;
        }

        /* 4. Flexbox Container: Helps keep the footer at the bottom even on short pages */
        .container {
            flex: 1;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                <span class="text-danger">Foodie</span>Go
            </a>

            @* Mobile Menu Toggle Button *@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @* Space for future links like "Orders" or "Menu" *@
                </ul>

                @* Authentication Links: Switches based on whether the user is logged in *@
                <ul class="navbar-nav ms-auto">
                    @* If JWToken is null, the user is NOT logged in - show Login/Register *@
                    @if (Context.Session.GetString("JWToken") == null)
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Auth")">Login</a></li>
                        <li class="nav-item"><a class="btn btn-danger rounded-pill px-3 ms-2" href="@Url.Action("Register", "Auth")">Register</a></li>
                    }
                    else
                    {
                        @* If token exists, show the User Dropdown with their Name *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-bold text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i>
                                @Context.Session.GetString("UserName")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("UserInfo", "Home")">
                                        <i class="bi bi-gear me-2"></i> My Profile
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    @* Logout clears the Session and redirects to Home *@
                                    <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Auth")">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-4">
        &copy; @DateTime.Now.Year FoodieGo. All rights reserved.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>